@model ProductCatalogService.ProductsModels.Products

<h1>Product Details</h1>

<div class="card mb-4">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-3">Price:</dt>
                    <dd class="col-sm-9">$@Model.Price</dd>

                    <dt class="col-sm-3">Category:</dt>
                    <dd class="col-sm-9">@Model.Category</dd>

                    <dt class="col-sm-3">Stock:</dt>
                    <dd class="col-sm-9">@Model.Stock</dd>

                    <dt class="col-sm-3">Description:</dt>
                    <dd class="col-sm-9">@Model.Description</dd>
                </dl>
            </div>
            <div class="col-md-4">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Name">
                }
                else
                {
                    <div class="bg-light p-5 text-center">No Image</div>
                }
            </div>
        </div>
    </div>
    <div class="card-footer">
        <a href="/Products/Edit/@Model.Id" class="btn btn-warning">Edit</a>
        <a href="/Products" class="btn btn-secondary">Back to List</a>
    </div>
</div>