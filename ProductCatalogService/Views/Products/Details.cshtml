@model Products

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Product Details</h1>
        <div>
            <a href="/Products/Edit/@Model.Id" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a href="/Products" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-info text-white">
            <h3>@Model.Name</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-3">Price:</dt>
                        <dd class="col-sm-9">$@Model.Price.ToString("0.00")</dd>

                        <dt class="col-sm-3">Category:</dt>
                        <dd class="col-sm-9">@Model.Category</dd>

                        <dt class="col-sm-3">Stock:</dt>
                        <dd class="col-sm-9">
                            @if (Model.Stock > 0)
                            {
                                <span class="badge bg-success">In Stock (@Model.Stock)</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Out of Stock</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Description:</dt>
                        <dd class="col-sm-9">@Model.Description</dd>

                        <dt class="col-sm-3">Product ID:</dt>
                        <dd class="col-sm-9"><small class="text-muted">@Model.Id</small></dd>
                    </dl>
                </div>
                <div class="col-md-4">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Name">
                    }
                    else
                    {
                        <div class="bg-light p-5 text-center rounded">
                            <i class="bi bi-image" style="font-size: 3rem;"></i>
                            <p>No Image Available</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>